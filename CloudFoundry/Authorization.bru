meta {
  name: Authorization
  type: http
  seq: 2
}

get {
  url: https://uaa.cf.{{region}}.hana.ondemand.com/oauth/token/?grant_type=password&client_id=cf&username={{process.env.username}}&password={{process.env.password}}
  body: none
  auth: none
}

params:query {
  grant_type: password
  client_id: cf
  username: {{process.env.username}}
  password: {{process.env.password}}
}

headers {
  Content-Type: application/x-www-form-urlencoded
}

settings {
  encodeUrl: true
}
